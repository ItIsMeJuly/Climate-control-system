<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.climacool"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="32" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <queries>
        <provider
            android:name="com.android.car.ui.plugin.PluginNameProvider"
            android:authorities="com.android.car.ui.plugin" />
    </queries>

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:extractNativeLibs="false"
        android:icon="@drawable/icon"
        android:label="CliMate"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.ClimaCool" >
        <activity
            android:name="com.example.climacool.airpurifier"
            android:exported="false" />

        <service android:name="org.eclipse.paho.android.service.MqttService" />

        <activity
            android:name="com.example.climacool.lights"
            android:exported="false" />
        <activity
            android:name="com.example.climacool.Ventilation"
            android:exported="false" />
        <activity
            android:name="com.example.climacool.Monitoring"
            android:exported="false" />
        <activity
            android:name="com.example.climacool.airconditioner"
            android:exported="false" />
        <activity
            android:name="com.example.climacool.Heater"
            android:exported="false" />

        <service android:name="org.eclipse.paho.android.service.MqttService" />

        <activity
            android:name="com.example.climacool.Kitchen"
            android:exported="false"
            android:parentActivityName="com.example.climacool.MainActivity" />
        <activity
            android:name="com.example.climacool.Office"
            android:exported="false"
            android:parentActivityName="com.example.climacool.MainActivity" />
        <activity
            android:name="com.example.climacool.Livingroom"
            android:exported="false"
            android:parentActivityName="com.example.climacool.MainActivity" />
        <activity
            android:name="com.example.climacool.Bathroom"
            android:exported="false"
            android:parentActivityName="com.example.climacool.MainActivity" />
        <activity
            android:name="com.example.climacool.BedroomActivity"
            android:exported="false"
            android:parentActivityName="com.example.climacool.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name="com.example.climacool.MainActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.android.car.ui.core.CarUiInstaller"
            android:authorities="com.example.climacool.CarUiInstaller"
            android:directBootAware="true"
            android:exported="false"
            android:process="@string/car_ui_installer_process_name" />
        <provider
            android:name="com.android.car.ui.core.SearchResultsProvider"
            android:authorities="com.example.climacool.SearchResultsProvider"
            android:exported="true"
            android:process="@string/car_ui_installer_process_name"
            android:readPermission="com.android.car.ui.READ_SEARCH_RESULTS" />
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="com.example.climacool.androidx-startup"
            android:exported="false" >
            <meta-data
                android:name="androidx.emoji2.text.EmojiCompatInitializer"
                android:value="androidx.startup" />
            <meta-data
                android:name="androidx.lifecycle.ProcessLifecycleInitializer"
                android:value="androidx.startup" />
        </provider>
    </application>

</manifest>